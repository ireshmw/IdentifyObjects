<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intoduce_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mw.iresh.identifyobjects.IntroducePage">

    <ImageView
        android:layout_width="196dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/footer"
        android:id="@+id/baseImg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/motherBtn"
        app:layout_constraintRight_toRightOf="@+id/motherBtn"
        app:layout_constraintTop_toBottomOf="@+id/motherBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/motherBtn" />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/father"
        android:id="@+id/fatherBtn"
        android:background="@drawable/father"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="145dp"
        app:layout_constraintBottom_toBottomOf="@+id/daughterBtn"
        android:layout_marginEnd="146dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/motherBtn"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="146dp" />

    <ImageButton
        android:layout_width="49dp"
        android:layout_height="111dp"
        android:id="@+id/motherBtn"
        android:background="@drawable/mother"
        app:layout_constraintRight_toLeftOf="@+id/nextPageBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/replayBtn"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="68dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/replayBtn"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/son"
        android:id="@+id/sonBtn"
        android:background="@drawable/son"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@+id/motherBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/replayBtn"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="21dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/baseImg"
        app:layout_constraintTop_toTopOf="@+id/motherBtn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp" />

    <ImageButton
        android:layout_width="34dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/daughter"
        android:id="@+id/daughterBtn"
        android:background="@drawable/daughter"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/nextPageBtn"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="@+id/baseImg"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="71dp"
        app:layout_constraintLeft_toLeftOf="@+id/nextPageBtn"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp" />

    <TextView
        android:text="Members of the Family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:gravity="center"
        android:freezesText="false"
        android:forceHasOverlappingRendering="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:typeface="monospace"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/motherBtn"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/motherBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memberText"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_media_ff"
        android:id="@+id/nextPageBtn"
        android:elevation="2dp"
        android:adjustViewBounds="false"
        android:background="@color/colorAccent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="107dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="107dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/replayBtn"
        android:elevation="2dp"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:background="@color/colorAccent"
        app:layout_constraintRight_toLeftOf="@+id/nextPageBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="67dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="67dp" />

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skipBtn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="19dp" />


</android.support.constraint.ConstraintLayout>
