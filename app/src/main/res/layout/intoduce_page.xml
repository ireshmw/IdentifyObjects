<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intoduce_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mw.iresh.identifyobjects.IntroducePage">

    <ImageView
        android:layout_width="196dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/footer"
        android:id="@+id/baseImg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/replayBtn"
        app:layout_constraintRight_toRightOf="@+id/motherBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/replayBtn"
        app:layout_constraintLeft_toRightOf="@+id/motherBtn" />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/father"
        android:id="@+id/fatherBtn"
        android:background="@drawable/father"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@+id/nextPageBtn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/nextPageBtn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/nextPageBtn" />

    <ImageButton
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:id="@+id/motherBtn"
        android:background="@drawable/mother"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/replayBtn"
        app:layout_constraintRight_toRightOf="@+id/replayBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/fatherBtn"
        app:layout_constraintLeft_toRightOf="@+id/replayBtn" />

    <ImageButton
        android:layout_width="33dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/son"
        android:id="@+id/sonBtn"
        android:background="@drawable/son"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/baseImg"
        app:layout_constraintRight_toRightOf="@+id/replayBtn"
        android:layout_marginTop="21dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/replayBtn"
        app:layout_constraintTop_toTopOf="@+id/motherBtn" />

    <ImageButton
        android:layout_width="34dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/daughter"
        android:id="@+id/daughterBtn"
        android:background="@drawable/daughter"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/baseImg"
        app:layout_constraintRight_toRightOf="@+id/nextPageBtn"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/nextPageBtn"
        app:layout_constraintTop_toTopOf="@+id/sonBtn" />

    <TextView
        android:text="Members of the Family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:gravity="center"
        android:freezesText="false"
        android:forceHasOverlappingRendering="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:typeface="monospace"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/motherBtn"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/motherBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memberText"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@android:drawable/ic_media_ff"
        android:id="@+id/nextPageBtn"
        android:elevation="2dp"
        android:adjustViewBounds="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/motherBtn"
        android:layout_marginLeft="22dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        android:id="@+id/replayBtn"
        android:elevation="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="78dp" />


</android.support.constraint.ConstraintLayout>
